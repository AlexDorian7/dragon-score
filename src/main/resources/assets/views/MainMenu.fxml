<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<?import javafx.scene.layout.Region?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #fffce8;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="team.logica_populi.dragonscore.ui.controllers.MainMenuController">
    <HBox alignment="CENTER_RIGHT" spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="10">
        <Label style="-fx-font-size: 32px; -fx-font-weight: bold;" text="LogiQuest" />
        <Region fx:id="spacer" HBox.hgrow="ALWAYS" /> <!-- keeps space between logo and menu options -->
        </HBox>
    <Label fx:id="nameLabel" alignment="CENTER" layoutY="100.0" prefWidth="600.0" text="Welcome NAME HERE!"
           textAlignment="CENTER">
        <font>
          <Font size="24.0"/>
        </font>
    </Label>
    <HBox layoutX="200.0" layoutY="188.0">
        <children>
          <ComboBox fx:id="lessonsBox" onAction="#updateSelected" prefWidth="150.0"/>
          <Separator prefWidth="10.0"/>
          <Button mnemonicParsing="false" onAction="#startLesson" text="Start"/>
        </children>
    </HBox>
    <TextFlow fx:id="lessonArea" layoutX="10.0" layoutY="223.0" minHeight="16.0" prefWidth="580.0"/>
</AnchorPane>
