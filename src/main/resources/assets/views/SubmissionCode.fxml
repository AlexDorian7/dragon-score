<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.input.MouseEvent?>

<AnchorPane prefHeight="400.0"
            prefWidth="600.0"
            style="-fx-background-color: #FFFDEE;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="team.logica_populi.dragonscore.ui.controllers.SubmissionCodeController">

   <children>
      <Text layoutX="164.0"
            layoutY="62.0"
            strokeType="OUTSIDE"
            strokeWidth="0.0"
            text="Congratulations! You have finished the exercise!"
            textAlignment="CENTER"
            wrappingWidth="272.7010192871094">
         <font>
            <Font size="26.0" />
         </font>
      </Text>

      <Text layoutX="196.0"
            layoutY="172.0"
            strokeType="OUTSIDE"
            strokeWidth="0.0"
            text="Here is your submission code:">
         <font>
            <Font size="16.0" />
         </font>
      </Text>

      <Button fx:id="backToExerciseButton"
              layoutX="125.0" layoutY="286.0"
              mnemonicParsing="false"
              onAction="#backToExercise"
              text="Return to Exercise"
              style="-fx-background-color: #282828;
              -fx-text-fill: white;
              -fx-border-radius: 10;
              -fx-background-radius: 10;"
              onMouseEntered="#handleHover"
              onMouseExited="#handleExit"/>

      <Button fx:id="backToMenuButton"
              layoutX="366.0"
              layoutY="284.0"
              mnemonicParsing="false"
              onAction="#backToMenu"
              text="Return To Menu"
              style="-fx-background-color: transparent;
              -fx-border-color: #282828;
              -fx-border-width: 2;
              -fx-border-radius: 10;
              -fx-background-radius: 10;
              -fx-text-fill: black;"
              onMouseEntered="#handleHover"
              onMouseExited="#handleExit"/>


      <Label fx:id="codeElement"
             layoutX="150.0"
             layoutY="248.0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>


      <TextArea fx:id="codeArea"
                layoutX="125.0"
                layoutY="200.0"
                prefHeight="45.0"
                prefWidth="350.0">
         <font>
            <Font size="20.0" />
         </font></TextArea>


   </children>

</AnchorPane>
