<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #fffce8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="team.logica_populi.dragonscore.ui.controllers.QuestionFormController">

    <!-- MenuLIne -->
    <HBox alignment="CENTER_RIGHT" spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="10">
        <Label style="-fx-font-size: 32px; -fx-font-weight: bold;" text="LogiQuest" />
        <Region fx:id="spacer" HBox.hgrow="ALWAYS" /> <!-- keeps space between logo and menu options -->
        <Button fx:id="HomeMenu" style="-fx-font-size: 14px; -fx-background-color: #fffce8; -fx-background-radius: 80;" text="Home" /> <!-- to be coded -->
    </HBox>

    <!-- Header / Menu -->
    <HBox alignment="CENTER_RIGHT" spacing="20" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="LogiQuest" style="-fx-font-family: 'Arial'; -fx-font-size: 2.5em; -fx-font-weight: bold;" />
        <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
        <Button fx:id="HomeMenu" text="Home"
                style="-fx-font-family: 'Arial'; -fx-font-size: 1.4em; -fx-background-color: #fffce8; -fx-font-weight: bold; -fx-background-radius: 80;" />
        <Button fx:id="SectionMenu" text="Section"
                style="-fx-font-family: 'Arial'; -fx-font-size: 1.4em; -fx-background-color: #fffce8; -fx-font-weight: bold; -fx-background-radius: 80;" />
        <Button fx:id="QuestionsHelp" text="Questions"
                style="-fx-font-family: 'Arial'; -fx-font-size: 1.4em; -fx-background-color: #fffce8; -fx-font-weight: bold; -fx-background-radius: 80;" />
    </HBox>

    <!-- Centered Layout -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="80" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.bottomAnchor="80">

        <!-- Question Display -->
        <WebView fx:id="questionArea" prefHeight="200" maxHeight="300" prefWidth="Infinity"
                 style="-fx-background-color: #fce6a4; -fx-border-radius: 30;" />

        <!-- Answer Block //// need to backend the answer-radio-->
        <VBox maxWidth="700" minHeight="100" spacing="10" style="-fx-border-color: black; -fx-border-radius: 8; -fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15;">
         <children>
            <FlowPane fx:id="answerArea" hgap="10.0" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0" rowValignment="TOP" vgap="10.0" />
         </children></VBox>

        <!-- Submit Button -->
        <HBox alignment="CENTER">
            <Button fx:id="submitButton" text="Submit" onAction="#onSubmit"
                    style="-fx-background-color: black; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 1.2em; -fx-padding: 10 25;"
                    maxWidth="200" />
        </HBox>
    </VBox>

    <!-- Difficulty Buttons -->
    <HBox alignment="CENTER_LEFT" spacing="15" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="40">
        <ToggleButton fx:id="easyDif" onAction="#onDifficultySelect" text="0"
                      style="-fx-background-radius: 30; -fx-background-color: #fce6a4; -fx-text-fill: black; -fx-pref-width: 40; -fx-pref-height: 40;" />
        <ToggleButton fx:id="normDif" onAction="#onDifficultySelect" text="10"
                      style="-fx-background-radius: 30; -fx-background-color: #fce6a4; -fx-text-fill: black; -fx-pref-width: 40; -fx-pref-height: 40;" />
        <ToggleButton fx:id="hardDif" onAction="#onDifficultySelect" text="15"
                      style="-fx-background-radius: 30; -fx-background-color: #fce6a4; -fx-text-fill: black; -fx-pref-width: 40; -fx-pref-height: 40;" />
    </HBox>

</AnchorPane>
