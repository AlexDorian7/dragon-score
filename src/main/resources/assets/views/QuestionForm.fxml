<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #fffce8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="team.logica_populi.dragonscore.ui.controllers.QuestionFormController">

    <!-- MenuLIne -->
    <HBox alignment="CENTER_RIGHT" spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="10">
        <Label style="-fx-font-size: 32px; -fx-font-weight: bold;" text="LogiCola" />
        <Region fx:id="spacer" HBox.hgrow="ALWAYS" /> <!-- keeps space between logo and menu options -->
        <Button fx:id="HomeMenu" style="-fx-font-size: 14px; -fx-background-color: #D2B48C; -fx-background-radius: 80" text="Home" /> <!-- to be coded -->
        <Button fx:id="SectionMenu" style="-fx-font-size: 14px; -fx-background-color: #D2B48C; -fx-background-radius: 80" text="Section" /> <!-- to be coded -->
        <Button fx:id="QuestionsHelp" style="-fx-font-size: 14px; -fx-background-color: #D2B48C;  -fx-background-radius: 80" text="Questions" /> <!-- to be coded -->
    </HBox>

    <!-- Main Spacings -->
    <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="70" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="60">


        <!-- Question frame -->
        <HBox alignment="CENTER">
            <WebView fx:id="questionArea" minHeight="100" prefHeight="200.0" prefWidth="700" style="-fx-background-color: #fce6a4; -fx-padding: 15; -fx-border-radius: 30; -fx-font-size: 22px; -fx-alignment: center; -fx-text-alignment: center;" text="Place holder for hardcoded question." wrapText="true" />
        </HBox>

        <!-- ProgressBAr ////// need to style in implement -->
        <ProgressBar id="progBar" fx:id="progressBar" minHeight="20" prefWidth="700" progress="0.65" style=" -fx-progress-color: #fce6a4;" />

        <!-- Answer Block //// need to backend the answer-radio-->
        <VBox fx:id="answerArea" maxWidth="700" minHeight="100" spacing="10" style="-fx-border-color: black; -fx-border-radius: 8; -fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15;" />

        <!-- Submit Button -->
        <HBox alignment="CENTER">
            <Button fx:id="submitButton" maxWidth="200.0" minWidth="100.0" onAction="#onSubmit" prefWidth="150.0" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" text="Submit" />
        </HBox>
    </VBox>

    <!-- Diff Buttons -->
    <HBox alignment="CENTER_LEFT" spacing="15" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="50">
        <ToggleButton fx:id="easyDif" onAction="#onDifficultySelect" style="-fx-background-radius: 30; -fx-background-color: #D2B48C; -fx-text-fill: black; -fx-pref-width: 40; -fx-pref-height: 40;" text="0" />
        <ToggleButton fx:id="normDif" onAction="#onDifficultySelect" style="-fx-background-radius: 30; -fx-background-color: #D2B48C; -fx-text-fill: black; -fx-pref-width: 40; -fx-pref-height: 40;" text="10" />
        <ToggleButton fx:id="hardDif" onAction="#onDifficultySelect" style="-fx-background-radius: 30; -fx-background-color: #D2B48C; -fx-text-fill: black; -fx-pref-width: 40; -fx-pref-height: 40;" text="15" />
    </HBox>

</AnchorPane>
