<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #fffce8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="team.logica_populi.dragonscore.ui.controllers.DefinitionsExampleController">
    

    <HBox alignment="CENTER_RIGHT" spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="10">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="LogicaPopuli" />
        <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
        <Label fx:id="HomeMenu" text="Home" />
        <Label text="Quiz" />
        <Label fx:id="QuestionsHelp" text="Questions" />
    </HBox>


    <VBox spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="60">


        <!-- Question Title -->
        <Label alignment="CENTER" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Section X" />


        <!-- rand question box -->
        <Label fx:id="questionArea" maxHeight="100" minHeight="100" minWidth="200" prefHeight="100" prefWidth="701.0" style="-fx-background-color: #fce6a4; -fx-padding: 15; -fx-font-size: 14px;" text="Place holder for random question" wrapText="true" />

        <Label alignment="CENTER" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Question" />

        <!-- answers -->
        <VBox maxHeight="200" minHeight="200" prefHeight="200" spacing="10" style="-fx-border-color: black; -fx-padding: 15;">
            <HBox fx:id="answer1" spacing="10"><Label style="-fx-font-weight: bold;" text="1)" /><Label text="Too broad" /></HBox>
            <HBox fx:id="answer2" spacing="10"><Label style="-fx-font-weight: bold;" text="2)" /><Label text="Too narrow" /></HBox>
            <HBox fx:id="answer3" spacing="10"><Label style="-fx-font-weight: bold;" text="3)" /><Label text="Circular" /></HBox>
            <HBox fx:id="answer4" spacing="10"><Label style="-fx-font-weight: bold;" text="4)" /><Label text="Uses poorly understood terms" /></HBox>
            <HBox fx:id="answer5" spacing="10"><Label style="-fx-font-weight: bold;" text="5)" /><Label text="Poor match in vagueness" /></HBox>
            <HBox fx:id="answer6" spacing="10"><Label style="-fx-font-weight: bold;" text="6)" /><Label text="Poor match in emotional tone" /></HBox>
            <HBox fx:id="answer7" spacing="10"><Label style="-fx-font-weight: bold;" text="7)" /><Label text="Has non-essential properties" /></HBox>
        </VBox>


        <!-- submit -->
        <HBox alignment="CENTER">
            <Button fx:id="submitButton" maxWidth="100" onMouseClicked="#onSubmit" style="-fx-background-color: black;-fx-text-fill: white; -fx-font-weight: bold;" text="Submit" />
        </HBox>
        <HBox alignment="BASELINE_LEFT" spacing="15">
            <ToggleButton fx:id="easyDif" onMouseClicked="onDifficultySelect" style="-fx-background-radius: 30; -fx-background-color: #cbb26a; -fx-text-fill: black; -fx-pref-width: 40; -fx-pref-height: 40;" text="0" />
            <ToggleButton fx:id="normDif" onMouseClicked="onDifficultySelect" style="-fx-background-radius: 30; -fx-background-color: #cbb26a; -fx-text-fill: black; -fx-pref-width: 40; -fx-pref-height: 40;" text="10" />
            <ToggleButton fx:id="hardDif" onMouseClicked="onDifficultySelect" style="-fx-background-radius: 30; -fx-background-color: #cbb26a; -fx-text-fill: black; -fx-pref-width: 40; -fx-pref-height: 40;" text="15" />
        </HBox>
    </VBox>


</AnchorPane>
