<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1024.0"
            prefWidth="1440.0"
            style="-fx-background-color: #fffdee;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="team.logica_populi.dragonscore.ui.controllers.DefinitionsExampleController">

    <!-- Top Menu Bar -->
    <HBox alignment="CENTER_RIGHT"
          AnchorPane.leftAnchor="44"
          AnchorPane.rightAnchor="44"
          AnchorPane.topAnchor="28">
        <Label text="LogiQuest"
               style="-fx-font-family: 'Helvetica';
               -fx-font-size: 36px;
               -fx-font-weight: BOLD;
               -fx-text-fill: #282828;" />
        <Region fx:id="spacer"
                HBox.hgrow="ALWAYS" />
        <Button fx:id="HomeMenu"
                text="Home"
                style="-fx-font-size: 24px;
                -fx-background-color: #fffdee;
                -fx-text-fill: #282828;"/>
    </HBox>

    <!-- Main Content -->
    <VBox alignment="CENTER"
          spacing="40"
          prefWidth="900"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="270"
          AnchorPane.rightAnchor="270">

        <!-- Question Display -->

            <Label fx:id="questionArea"
                   maxWidth="Infinity"
                   maxHeight="700"
                   wrapText="true"
                   style="-fx-background-color: #fce6a4;
                   -fx-padding: 20;
                   -fx-font-size: 22px;
                   -fx-text-alignment: center;
                   -fx-alignment: center;"
                   text="Place holder for hardcoded question." />


        <!-- Progress Bar -->
        <ProgressBar fx:id="progressBar"
                     prefWidth="Infinity"
                     minHeight="40"
                     progress="0.65"
                     style="-fx-progress-color: #fce6a4;
                     -fx-border-radius: 4;
                     -fx-background-radius: 4;" />

        <!-- Answer Options -->
        <VBox spacing="10" maxWidth="Infinity" minHeight="100"
              style="-fx-border-color: black; -fx-border-radius: 8; -fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15;">
            <RadioButton fx:id="answer1" onAction="#selectAnswer" text="Too broad" />
            <RadioButton fx:id="answer2" onAction="#selectAnswer" text="Too narrow" />
            <RadioButton fx:id="answer3" onAction="#selectAnswer" text="Circular" />
            <RadioButton fx:id="answer4" onAction="#selectAnswer" text="Uses poorly understood terms" />
            <RadioButton fx:id="answer5" onAction="#selectAnswer" text="Poor match in vagueness" />
            <RadioButton fx:id="answer6" onAction="#selectAnswer" text="Poor match in emotional tone" />
            <RadioButton fx:id="answer7" onAction="#selectAnswer" text="Has non-essential properties" />
        </VBox>

        <!-- Submit Button -->
        <HBox alignment="CENTER">
            <Button fx:id="submitButton" onAction="#onSubmit" maxWidth="150"
                    style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" text="Submit" />
        </HBox>
    </VBox>

    <!-- Difficulty Buttons -->
    <HBox alignment="CENTER_LEFT" spacing="15" AnchorPane.leftAnchor="40" AnchorPane.bottomAnchor="20">
        <ToggleButton fx:id="easyDif" onAction="#onDifficultySelect" text="0"
                      style="-fx-background-radius: 30; -fx-background-color: #fce6a4; -fx-text-fill: black; -fx-pref-width: 40; -fx-pref-height: 40;" />
        <ToggleButton fx:id="normDif" onAction="#onDifficultySelect" text="10"
                      style="-fx-background-radius: 30; -fx-background-color: #fce6a4; -fx-text-fill: black; -fx-pref-width: 40; -fx-pref-height: 40;" />
        <ToggleButton fx:id="hardDif" onAction="#onDifficultySelect" text="15"
                      style="-fx-background-radius: 30; -fx-background-color: #fce6a4; -fx-text-fill: black; -fx-pref-width: 40; -fx-pref-height: 40;" />
    </HBox>

</AnchorPane>
