<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assets.views.BinaryTruthTables">
    <!-- Top Navigation for BD-->
    <HBox alignment="CENTER_RIGHT" spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="10">
        <Label style="-fx-font-family: 'Arial'; -fx-font-size: 2.5em; -fx-font-weight: bold;" text="LogiQuest" />
        <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
        <Button fx:id="HomeMenu" style="-fx-font-family: 'Arial'; -fx-font-size: 1.2em; -fx-background-color: #fffce8; -fx-font-weight: bold; -fx-background-radius: 80;" text="Home" />
        <Button fx:id="SectionMenu" style="-fx-font-family: 'Arial'; -fx-font-size: 1.2em; -fx-background-color: #fffce8; -fx-font-weight: bold; -fx-background-radius: 80;" text="Section" />
        <Button fx:id="QuestionsHelp" style="-fx-font-family: 'Arial'; -fx-font-size: 1.2em; -fx-background-color: #fffce8; -fx-font-weight: bold; -fx-background-radius: 80;" text="Questions" />
    </HBox>

    <!-- Centered Content -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="100" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="80">

        <!-- Question Box -->
        <HBox alignment="CENTER">
            <WebView fx:id="questionArea" maxWidth="800" prefHeight="200" prefWidth="700" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 10;" />
        </HBox>

        <!-- Progress Bar -->
        <HBox alignment="CENTER" />

        <!-- Answer Area -->
        <HBox alignment="CENTER">
            <VBox fx:id="answerArea" maxWidth="800" prefHeight="132.0" prefWidth="560.0" spacing="10" style="-fx-border-color: black; -fx-border-radius: 8; -fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15;">
            <children>
               <TableView prefHeight="200.0" prefWidth="200.0">
                 <columns>
                   <TableColumn prefWidth="75.0" text="C1" />
                   <TableColumn prefWidth="75.0" text="C2" />
                 </columns>
               </TableView>
            </children></VBox>
        </HBox>
        <!-- Progress Bar -->
        <HBox alignment="CENTER">
            <ProgressBar fx:id="progressBar" maxWidth="800" minHeight="20" prefWidth="700" progress="0.65" style="-fx-progress-color: #fce6a4;" />
        </HBox>
        <!-- Submit Button -->
        <HBox alignment="CENTER">
            <Button fx:id="submitButton" maxWidth="200" onAction="#onSubmit" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 1.2em; -fx-padding: 10 25;" text="Submit" />
        </HBox>
    </VBox>

    <!-- Difficulty Buttons (Outside Main VBox) -->
    <HBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <ToggleButton fx:id="easyDif" style="-fx-background-radius: 100; -fx-background-color: #fce6a4; -fx-text-fill: black; -fx-pref-width: 50; -fx-pref-height: 50; -fx-font-size: 1.1em;" text="0" />
        <ToggleButton fx:id="normDif" style="-fx-background-radius: 100; -fx-background-color: #fce6a4; -fx-text-fill: black; -fx-pref-width: 50; -fx-pref-height: 50; -fx-font-size: 1.1em;" text="10" />
        <ToggleButton fx:id="hardDif" style="-fx-background-radius: 100; -fx-background-color: #fce6a4; -fx-text-fill: black; -fx-pref-width: 50; -fx-pref-height: 50; -fx-font-size: 1.1em;" text="15" />
    </HBox>

</AnchorPane>
