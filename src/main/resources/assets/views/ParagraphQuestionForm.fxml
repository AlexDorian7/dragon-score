<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #fffce8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="team.logica_populi.dragonscore.ui.controllers.ParagraphQuestionForm">

    <!-- Top Navigation -->
    <HBox alignment="CENTER_RIGHT" spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="10">
        <Label style="-fx-font-family: 'Arial'; -fx-font-size: 2.5em; -fx-font-weight: bold;" text="LogiQuest" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="HomeMenu" onAction="#goHome" style="-fx-font-family: 'Arial'; -fx-font-size: 1.4em; -fx-background-color: #fffce8; -fx-font-weight: bold; -fx-background-radius: 80;" text="Home" />
    </HBox>

    <!-- Centered Content -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="100" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="80">

        <!-- Progress Bar -->
        <HBox alignment="CENTER">
            <ProgressBar fx:id="progressBar" maxWidth="800" minHeight="20" prefWidth="700" progress="0.65" style="-fx-progress-color: #fce6a4;" />
        </HBox>

        <!-- Answer Block //// need to backend the answer-radio-->
        <TextFlow fx:id="paragraphArea" maxWidth="700" minHeight="100" style="-fx-border-color: black; -fx-border-radius: 8; -fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15;" />

        <!-- Submit Button -->
        <HBox alignment="CENTER">
            <Button fx:id="submitButton" maxWidth="200" onAction="#onSubmit" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 1.2em; -fx-padding: 10 25;" text="Submit" />
        </HBox>
    </VBox>

    <!-- Difficulty Buttons (Outside Main VBox) -->
    <HBox alignment="CENTER_LEFT" spacing="15" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="44" AnchorPane.rightAnchor="44">
        <ToggleButton fx:id="easyDif" style="-fx-background-radius: 100; -fx-background-color: #fce6a4; -fx-text-fill: black; -fx-pref-width: 50; -fx-pref-height: 50; -fx-font-size: 1.1em;" text="0" />
        <ToggleButton fx:id="normDif" selected="true" style="-fx-background-radius: 100; -fx-background-color: #fce6a4; -fx-text-fill: black; -fx-pref-width: 50; -fx-pref-height: 50; -fx-font-size: 1.1em;" text="10" />
        <ToggleButton fx:id="hardDif" style="-fx-background-radius: 100; -fx-background-color: #fce6a4; -fx-text-fill: black; -fx-pref-width: 50; -fx-pref-height: 50; -fx-font-size: 1.1em;" text="15" />
    </HBox>

</AnchorPane>
