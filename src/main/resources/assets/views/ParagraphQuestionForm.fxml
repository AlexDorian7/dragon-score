<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0"
            prefWidth="800.0"
            style="-fx-background-color: #fffce8;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="team.logica_populi.dragonscore.ui.controllers.ParagraphQuestionForm">

    <!-- Top Navigation -->
    <HBox alignment="CENTER_RIGHT"
          AnchorPane.leftAnchor="44"
          AnchorPane.rightAnchor="44"
          AnchorPane.topAnchor="28">
        <Label style="-fx-font-family: 'Helvetica';
        -fx-font-size: 36px;
        -fx-font-weight: BOLD;
        -fx-text-fill: #282828;"
               text="LogiQuest" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="HomeMenu"
                onAction="#goHome"
                style="-fx-font-family: 'Helvetica';
                -fx-font-size: 24px;
                -fx-font-weight: BOLD;
                -fx-background-color: #fffce8;
                -fx-text-fill: #424242;" text="Home" />
    </HBox>


    <!-- Centered Content -->
    <VBox alignment="CENTER"
          spacing="20"
          AnchorPane.bottomAnchor="100"
          AnchorPane.leftAnchor="44"
          AnchorPane.rightAnchor="44"
          AnchorPane.topAnchor="80">

        <!-- Progress Bar -->
        <HBox alignment="CENTER">
            <ProgressBar fx:id="progressBar"
                         minHeight="30"
                         prefWidth="700"
                         progress="0.65"
                         style="-fx-progress-color: #e1c778;" />
            <VBox.margin>
                <Insets top="12" />
            </VBox.margin>
        </HBox>

        <!-- Answer Block //// need to backend the answer-radio-->
        <TextFlow fx:id="paragraphArea"
                  minHeight="160.0"
                  maxHeight="300.0"
                  maxWidth="700"
                  style="-fx-border-color: #a5a5a5;
              -fx-border-radius: 4;
              -fx-background-color: #fdfdfd;
              -fx-background-radius: 4;
              -fx-font-size: 24px;
              -fx-font-family: 'Verdana';
              -fx-padding: 16;"/>

        <!-- Submit Button -->

    <!-- Difficulty Buttons -->
    <HBox alignment="CENTER"
          maxWidth="700"
          spacing="16">

        <ToggleButton fx:id="easyDif"
                      style="-fx-background-radius: 100;
                          -fx-background-color: #e0c97d;
                          -fx-text-fill: #282828;
                          -fx-pref-width: 45;
                          -fx-pref-height: 45;
                          -fx-font-size: 18;"
                      text="0" />
        <ToggleButton fx:id="normDif"
                      selected="true"
                      style="-fx-background-radius: 100;
                          -fx-background-color: #e0c97d;
                          -fx-text-fill: #282828;
                          -fx-pref-width: 45;
                          -fx-pref-height: 45;
                          -fx-font-size: 18;"
                      text="10" />
        <ToggleButton fx:id="hardDif"
                      style="-fx-background-radius: 100;
                          -fx-background-color: #e0c97d;
                          -fx-text-fill: #282828;
                          -fx-pref-width: 45;
                          -fx-pref-height: 45;
                          -fx-font-size: 18;"
                      text="15" />

        <!-- push Submit to the right -->
        <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="submitButton"
                    minWidth="120.0"
                    onAction="#onSubmit"
                    onMouseEntered="#handleHover"
                    onMouseExited="#handleExit"
                    prefHeight="45.0"
                    style="-fx-background-color: #282828;
                    -fx-text-fill: white;
                    -fx-border-radius: 10;
                    -fx-background-radius: 10;
                    -fx-font-size: 20px;
                    -fx-padding: 8 28;"
                    text="Submit" />
        </HBox>

    </VBox>

</AnchorPane>
